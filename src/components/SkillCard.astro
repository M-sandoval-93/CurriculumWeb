---
// icons frontEnd
import HTML from "@/icons/Frontend/HTML.astro";
import CSS from "@/icons/Frontend/CSS.astro";
import JavaScript from "@/icons/Frontend/JavaScript.astro";
import JQuery from "@/icons/Frontend/JQuery.astro";
import ReactJS from "@/icons/Frontend/ReactJS.astro";
import IconAstro from "@/icons/Frontend/IconAstro.astro";
import NPM from "@/icons/Frontend/NPM.astro";
import Boostrap from "@/icons/Frontend/Boostrap.astro";
import TailwindCSS from "@/icons/Frontend/TailwindCSS.astro";

// icons backEnd
import PHP from "@/icons/Backend/PHP.astro";
import Python from "@/icons/Backend/Python.astro";
import MySQL from "@/icons/Backend/MySQL.astro";
import PostgreSQL from "@/icons/Backend/PostgreSQL.astro";
import JWT from "@/icons/Backend/JWT.astro";
import Docker from "@/icons/Backend/Docker.astro";
import Composer from "@/icons/Backend/Composer.astro";
import Apache from "@/icons/Backend/Apache.astro";
import ApiRest from "@/icons/Backend/ApiRest.astro";
import VBA from "@/icons/Backend/VBA.astro";

// icons others
import WordPress from "@/icons/OtherSkills/WordPress.astro";
import Git from "@/icons/OtherSkills/Git.astro";
import GitHub from "@/icons/OtherSkills/GitHub.astro";
import Figma from "@/icons/OtherSkills/Figma.astro";
import Canvas from "@/icons/OtherSkills/Canvas.astro";
import Notion from "@/icons/OtherSkills/Notion.astro";
import AppSheet from "@/icons/OtherSkills/Appsheet.astro";
import Office from "@/icons/OtherSkills/Office.astro";
import Terminal from "@/icons/OtherSkills/Terminal.astro";

interface Props {
    title: string,
    skills: any
}

const {title, skills} = Astro.props;

const ICONS = {
    HTML, CSS, JavaScript, JQuery, ReactJS, IconAstro, NPM, Boostrap, TailwindCSS,
    PHP, Python, MySQL, PostgreSQL, JWT, Docker, Composer, Apache, ApiRest, VBA,
    WordPress, Git, GitHub, Figma, Canvas, Notion, AppSheet, Office, Terminal
};
---

<article>
    <header>
        <h3>{title}</h3>
    </header>

    <ul>
        {
            skills.map(({skill, icon}) => {
                const Icon = ICONS[icon];

                return (
                    <li>
                        <p>
                            {Icon && (<Icon />)}
                            {skill}
                        </p>
                    </li>
                )
            })
        }
    </ul>
</article>

<style>
    article {
        border: 1px solid #045669;
        border-radius: 8px;
        padding: 1rem;
        transition: all .3s ease-in-out;
    }

    article:hover {
        background-color: #C0DFE6;
        scale: 1.04;
    }

    header {
        margin-bottom: .8rem;
    }

    li p {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: .6rem;
        padding: .1rem;
    }
</style>