---
import {personalData} from "@cv";
const {name} = personalData;
---

<footer>
    <div>
        <p>
            &copy; 2024 {name}. Algunos derechos reservados.
        </p>

        <p>
            Basado en repositorio de <a href="https://github.com/midudev/minimalist-portfolio-json/tree/main" title="Visitar repositorio" target="_blank" rel="noopener noreferrer">MiduDev</a>.
        </p>
    </div>
</footer>

<style>
    footer {
        max-width: 700px;
        margin: auto;
    }

    div {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    p {
        text-align: center;
        font-size: .90rem;
    }

    a {
        color: #045669;
        font-weight: 700;
    }
</style>