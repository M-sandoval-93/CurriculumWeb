---
import Section from "@/components/Section.astro";
import VisitLink from "@/components/VisitLink.astro";

import {work} from "@cv";
---

<Section title="Experiencia Laboral">
    <ul>
        {
            work.map(({company, position, url, startDate, endDate, summary}) => {
                const starYear = new Date(startDate).getFullYear(); 
                const endYear = endDate ? new Date(endDate).getFullYear() : "Actual";
                const years = `${starYear} - ${endYear}`;

                return (
                    <li>
                        <article>
                            <header>
                                <section>
                                    <h3>{company}</h3>
                                    <h4>{position}</h4>
                                </section>

                                <time>{years}</time>
                            </header>
                            
                            <main>
                                <p>
                                    {summary.split('--').map(line => <>{line}<br/></>)}
                                </p>
                            </main>

                            <VisitLink url={url} place="empresa" />
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    article h4 {
        color: #444;
        font-weight: 600;
    }
    
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: .3rem;
        flex-wrap: wrap-reverse;
        gap: .6rem
    }

    main {
        margin: .4rem 0;
    }

    time {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100px;
        color: #045669;
        font-size: .85rem;
        border: 1px solid #045669;
        padding: .3rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all .3s ease-in-out;
    }

    time:hover {
        background-color: #C0DFE6;
        scale: 1.04;
        cursor: pointer;
    }
</style>